<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <VBox class="sapUiSmallMargin">

        <Title text="Change Logs" level="H4" />

        <Table fixedLayout="Strict" width="100%">

            <!-- ================= Columns ================= -->
            <columns>
                <Column width="20%">
                    <Text text="DateTime" />
                </Column>

                <Column width="15%">
                    <Text text="User" />
                </Column>

                <Column width="15%">
                    <Text text="Operation Type" />
                </Column>

                <Column width="20%">
                    <Text text="Entity" />
                </Column>

                <Column width="30%">
                    <Text text="Changes" />
                </Column>
            </columns>

            <!-- ================= ONE HARD-CODED ROW ================= -->
            <items>
                <ColumnListItem>
                    <cells>

                        <!-- Main audit values -->
                        <Text text="2026-01-22 11:05" />
                        <Text text="Asshar" />
                        <Text text="UPDATE" />
                        <Text text="Contract" />

                        <!-- Nested Changes Table -->
                        <Table width="100%">

                            <columns>
                                <Column>
                                    <Text text="Field" />
                                </Column>
                                <Column>
                                    <Text text="Old Value" />
                                </Column>
                                <Column>
                                    <Text text="New Value" />
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="Application Capital" />
                                        <Text text="100000" />
                                        <Text text="120000" />
                                    </cells>
                                </ColumnListItem>

                                <ColumnListItem>
                                    <cells>
                                        <Text text="Purpose of Loan" />
                                        <Text text="PD" />
                                        <Text text="PF" />
                                    </cells>
                                </ColumnListItem>
                            </items>

                        </Table>

                    </cells>
                </ColumnListItem>
            </items>

        </Table>

    </VBox>

</core:FragmentDefinition>