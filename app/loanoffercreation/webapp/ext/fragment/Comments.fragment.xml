<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">

    <VBox
        id="commentsFragmentVBox"
        width="100%"
        class="sapUiContentPadding"
        core:require="{ handler: 'loanoffercreation/ext/fragment/Comments' }">

        <!-- View all comments aligned right -->
        <HBox
            width="100%"
            justifyContent="End">
            <Button
                text="View All Comments"
                type="Transparent"
                icon="sap-icon://comment"
                press="handler.onLoadComments"/>
        </HBox>

        <!-- FULL-WIDTH TextArea with proper spacing -->
        <TextArea

            rows="5"
            width="100%"
            class="sapUiSmallMarginTop"
            placeholder="Enter your comment..."
            enabled="{= !${IsActiveEntity}}" />

        <!-- Footer actions -->
        <HBox
            width="100%"
            justifyContent="End"
            class="sapUiSmallMarginTop">
        </HBox>

    </VBox>
</core:FragmentDefinition>
