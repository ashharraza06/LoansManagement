<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
 
    <HBox
    width="100%"
    wrap="NoWrap"
    alignItems="Start"
    class="headerHBox">
 
    <VBox class="headerItem">
        <Label text="Loan" design="Bold"/>
        <Text text="{loanNumber}"/>
    </VBox>
 
    <VBox class="headerItem">
        <Label text="BP Number" design="Bold"/>
        <Text text="{bpNumber}"/>
    </VBox>
 
    <VBox class="headerItem">
        <Label text="Partner Name" design="Bold"/>
        <Text text="Berks Barber School"/>
    </VBox>
 
    <VBox class="headerItem">
        <Label text="Status" design="Bold"/>
        <Text text="{status}"/>
    </VBox>
 
    <VBox class="headerItem">
        <Label text="Disb. Status" design="Bold"/>
        <Text text="{disbursementStatus}"/>
    </VBox>
 
</HBox>
 
 
</core:FragmentDefinition>