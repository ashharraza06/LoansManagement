<core:FragmentDefinition

    xmlns:core="sap.ui.core"

    xmlns="sap.m"

    xmlns:f="sap.ui.layout.form">
 
    <f:SimpleForm

        id="IncomingPaymentForm"

        layout="ResponsiveGridLayout"

        editable="true"

        columnsXL="3"

        columnsL="3"

        columnsM="3"

        labelSpanXL="4"

        labelSpanL="4"

        labelSpanM="4"

        adjustLabelSpan="false">
 
        <!-- Row 1 -->
        <Label text="BP role"/>
<Input value="{bpRole}" editable="true"/>
 
        <Label text="Incoming Payment Method"/>
<Input value="{paymentMethod}" editable="true"/>
 
        <Label text="AR Billing Job"/>
<Select selectedKey="{arBillingJob}" editable="true"/>
 
        <Label text="Payoff Lock"/>
<CheckBox selected="{payoffLock}" editable="true"/>
 
        <!-- Row 2 -->
 
        <Label text="1908 Relevant Indicator"/>
<CheckBox selected="{relevantIndicator}" editable="true"/>
 
        <Label text="Exclude from Dunning Indicator"/>
<CheckBox selected="{dunningIndicator}" editable="true"/>
 
    </f:SimpleForm>
 
</core:FragmentDefinition>

 