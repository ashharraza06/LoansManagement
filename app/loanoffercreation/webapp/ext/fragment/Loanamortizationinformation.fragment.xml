<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros" xmlns:l="sap.ui.layout">
    <VBox core:require="{handler: 'loanoffercreation/ext/fragment/Loanamortizationinformation'}"  id="auditRootVBox"
        class="sapUiSmallMargin">
 
        <l:Grid
    id="loanAmortizationGrid"
    defaultSpan="XL4 L4 M4 S12"
    vSpacing="1"
    hSpacing="0">
	 <!-- Amortization Date -->
    <VBox>
        <Label text="Loan Begin Date:"/>
        <Text
            text="{amtzDate}"
            visible="{= ${IsActiveEntity} }"/>
        <DatePicker
            value="{amtzDate}"
            displayFormat="MM/dd/yyyy"
            valueFormat="yyyy-MM-dd"
            placeholder="e.g. 12/31/2026"
            width="80%"
            visible="{= !${IsActiveEntity} }"/>
    </VBox>
	
    <!-- Maturity Date -->
    <VBox>
        <Label text="Loan Maturity Date:"/>
        <Text
            text="{maturityDate}"
            visible="{= ${IsActiveEntity} }"/>
        <DatePicker
            value="{maturityDate}"
            displayFormat="MM/dd/yyyy"
            valueFormat="yyyy-MM-dd"
            placeholder="e.g. 12/31/2026"
            width="80%"
            visible="{= !${IsActiveEntity} }"/>
    </VBox>
 
    <!-- Amortization Start -->
    <VBox>
        <Label text="Amortization Start:" />
        <Text
            text="{fixedFrom}"
            visible="{= ${IsActiveEntity} }"/>
        <DatePicker
            value="{fixedFrom}"
            displayFormat="MM/dd/yyyy"
            valueFormat="yyyy-MM-dd"
            placeholder="e.g. 12/31/2026"
            width="80%"
            visible="{= !${IsActiveEntity} }"/>
    </VBox>
 
    <!-- Amortization End -->
    <VBox>
        <Label text="Amortization End:" />
        <Text
            text="{fixedUntil}"
            visible="{= ${IsActiveEntity} }"/>
        <DatePicker
            value="{fixedUntil}"
            displayFormat="MM/dd/yyyy"
            valueFormat="yyyy-MM-dd"
            placeholder="e.g. 12/31/2026"
            width="80%"
            visible="{= !${IsActiveEntity} }"/>
    </VBox>
 
   
 
 
    <!-- Amortization Status -->
    <VBox>
        <Label text="Amortization Status:"/>
        <Text
            text="{amortizationStatus}"
            visible="{= ${IsActiveEntity} }"/>
        <ComboBox
            selectedKey="{path:'amortizationStatus',
			targetType:'any'}"
            width="80%"
            visible="{= !${IsActiveEntity} }"
            items="{
            path: '/AmortizationStatusSearchHelp'
        }">
 
        <core:Item
            key="{amzt}"
            text="{shortName}({amzt})" />
       
        </ComboBox>
    </VBox>
 
</l:Grid>
 
 
    </VBox>
</core:FragmentDefinition>
 