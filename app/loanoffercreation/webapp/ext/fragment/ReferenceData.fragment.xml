<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <!-- Main Container -->
    <VBox
        id="referenceRootVBox"
        class="referenceContainer sapUiNoContentPadding">

        <!-- Responsive wrapper -->
        <HBox wrap="Wrap" class="referenceFields">

            <!-- Legacy Number -->
            <VBox class="referenceField">
                <Label text="Legacy Number:" class="referenceLabel"/>

                <Text
                    text="{= ${legacyNumber} ? ${legacyNumber} : '_' }"
                    visible="{IsActiveEntity}"
                    class="referenceValue"/>

                <Input
                    value="{legacyNumber}"
                    visible="{= !${IsActiveEntity} }"
                    width="100%"/>
            </VBox>


            <!-- Project Number -->
            <VBox class="referenceField">
                <Label text="Project Number:" class="referenceLabel"/>

                <Text
                    text="{= ${projectNumber} ? ${projectNumber} : '_' }"
                    visible="{IsActiveEntity}"
                    class="referenceValue"/>

                <Input
                    value="{projectNumber}"
                    visible="{= !${IsActiveEntity} }"
                    width="100%"/>
            </VBox>

             <!-- Primary Industry -->
            <VBox class="referenceField">
                <Label text="Primary Industry:" class="referenceLabel"/>

                <Text
                    text="{= ${primaryIndustryCode} ? ${primaryIndustryCode} : '_' }"
                    visible="{IsActiveEntity}"
                    class="referenceValue"/>

                <Input
                    value="{primaryIndustryCode}"
                    visible="{= !${IsActiveEntity} }"
                    width="100%"/>
            </VBox>
            <!-- County -->
            <VBox class="referenceField">
                <Label text="County:" class="referenceLabel"/>

                <Text
                    text="{= ${country} ? ${country} : '_' }"
                    visible="{IsActiveEntity}"
                    class="referenceValue"/>

                <Input
                    value="{country}"
                    visible="{= !${IsActiveEntity} }"
                    width="100%"/>
            </VBox>


            <!-- Organiz. District -->
            <VBox class="referenceField">
                <Label text="Organiz District:" class="referenceLabel"/>

                <Text
                    text="{= ${orgDistrict} ? ${orgDistrict} : '_' }"
                    visible="{IsActiveEntity}"
                    class="referenceValue"/>

                <Input
                    value="{orgDistrict}"
                    visible="{= !${IsActiveEntity} }"
                    width="100%"/>
            </VBox>


            <!-- Agent District -->
            <VBox class="referenceField">
                <Label text="Agent District:" class="referenceLabel"/>

                <Text
                    text="{= ${agentDistrict} ? ${agentDistrict} : '_' }"
                    visible="{IsActiveEntity}"
                    class="referenceValue"/>

                <Input
                    value="{agentDistrict}"
                    visible="{= !${IsActiveEntity} }"
                    width="100%"/>
            </VBox>


           

        </HBox>

    </VBox>

</core:FragmentDefinition>
