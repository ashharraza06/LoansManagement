    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros">

    <VBox>

        <Table id="sampleTable">

            <!-- Columns -->
            <columns>
                <Column>
                    <Text text="Employee Name"/>
                </Column>
                <Column>
                    <Text text="Employee ID"/>
                </Column>
                <Column>
                    <Text text="Status"/>
                </Column>
                <Column>
                    <Text text="Approved By"/>
                </Column>
                <Column>
                    <Text text="Days Taken"/>
                </Column>
            </columns>

            <!-- Hardcoded Rows -->
            <items>

                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Text text="Rahul Sharma"/>
