                        <Text text="2"/>
                    </cells>
                </ColumnListItem>

                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Text text="Anita Verma"/>
                        <Text text="EMP002"/>
                        <Text text="Pending"/>
                        <Text text="Manager B"/>
                        <Text text="4"/>
                    </cells>
                </ColumnListItem>

                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Text text="Suresh Kumar"/>
                        <Text text="EMP003"/>
                        <Text text="Rejected"/>
                        <Text text="Manager C"/>
                        <Text text="1"/>
                    </cells>
                </ColumnListItem>

            </items>

        </Table>

    </VBox>

</core:FragmentDefinition>
