{
  "name": "LoansManagement",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xsenv": "^6.0.0",
    "@sap/xssec": "^4.12.2",
    "cors": "^2.8.6",
    "express": "^4.22.1",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "undeploy": "cf undeploy LoansManagement --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-loanoffercreation": "cds watch --open loanoffercreation/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-loanmanagement": "cds watch --open loanmanagement/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/loanoffercreation"
  ],
  "cds": {
    "requires": {
      "db": "hana",
      "auth": "dummy"
    }
  }
}
